{
  "entities": {
    "Appointment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Appointment",
      "type": "object",
      "description": "Represents a booked appointment for a braiding service.",
      "properties": {
        "dateTime": {
          "type": "string",
          "description": "Start date and time of the appointment in ISO format.",
          "format": "date-time"
        },
        "totalCost": {
            "type": "number",
            "description": "The total cost of the appointment."
        },
        "attendees": {
            "type": "array",
            "description": "List of people attending the appointment.",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "phone": { "type": "string" },
                    "services": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": { "type": "string" },
                                "quantity": { "type": "number" },
                                "price": { "type": "number" }
                            },
                            "required": ["name", "quantity", "price"]
                        }
                    }
                },
                "required": ["name", "phone", "services"]
            }
        }
      },
      "required": [
        "dateTime",
        "attendees",
        "totalCost"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/appointments/{appointmentId}",
        "definition": {
          "entityName": "Appointment",
          "schema": {
            "$ref": "#/backend/entities/Appointment"
          },
          "description": "Stores all booked appointments. Used for checking slot availability.",
          "params": [
            {
              "name": "appointmentId",
              "description": "The unique identifier of the appointment."
            }
          ]
        }
      }
    ]
  }
}
