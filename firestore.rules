
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /appointments/{appointmentId} {
      // Public users can create appointments
      allow create: if true;
      
      // Only authenticated users can read the full list or individual appointments
      allow read, list: if isSignedIn();
      
      // By default, disallow updates and deletes from clients.
      // These should be handled with care, perhaps via an admin interface or cloud functions.
      allow update, delete: if false;
    }
  }
}
