
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /appointments/{appointmentId} {
      // Anyone can read appointments to check for availability and create a new one.
      allow read, create: if true;
      // To protect appointment integrity, prevent updates or deletions from the client.
      allow update, delete: if false;
    }
  }
}
