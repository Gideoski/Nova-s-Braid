
rules_version = '2';

// Version 1.2: Allow public read for booking, admin create/delete
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /appointments/{appointmentId} {
      // Anyone can create an appointment (book a slot)
      allow create: if true;
      
      // Anyone can read the appointment list to check for availability
      allow read, list: if true;
      
      // Only authenticated users (admins) can update or delete appointments
      allow update, delete: if isSignedIn();
    }
  }
}
