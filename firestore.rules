rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /appointments/{appointmentId} {
      // Anyone can read the list of appointments to check for availability
      allow get, list: if true;
      // Anyone can create a new appointment
      allow create: if true;
      // Nobody can update or delete appointments from the client-side
      allow update, delete: if false;
    }
  }
}
